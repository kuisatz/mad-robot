<?xml version="1.0" encoding="utf-8"?>
<!-- Attribute sets for custom widgets DO NOT EDIT -->
<resources>

    <!-- Attributes for com.madrobot.ui.widgets.ColorPickerView -->
    <declare-styleable name="ColorPickerView">
        <attr name="borderColor" format="color" />
        <attr name="selectorRadius" format="dimension" />
        <attr name="selectorOuterColor" format="color" />
        <attr name="selectorInnerColor" format="color" />
        <attr name="sliderPanelSelectorColor" format="color" />
        <attr name="sliderPanelPadding" format="dimension" />
        <attr name="sliderPanelWidth" format="dimension" />
    </declare-styleable>

    <!-- Attributes for com.madrobot.ui.widgets.WebImageView -->
    <declare-styleable name="WebImageView">
        <attr name="imageUrl" format="string" />
        <attr name="autoLoad" format="boolean" />
        <attr name="progressDrawable" format="integer" />
        <attr name="errorDrawable" format="integer" />
    </declare-styleable>

    <!-- Attributes for com.madrobot.ui.widgets.HorizontalScrollView -->
    <declare-styleable name="HorizontalScrollView">
        <attr name="snapVelocity" format="integer" />
        <attr name="pageWidth" format="dimension" />
        <attr name="pageAnimationDuration" format="integer" />
    </declare-styleable>
    <!-- Attributes for com.madrobot.ui.widgets.WheelView -->
    <declare-styleable name="WheelView">
        <attr name="topDrawable" format="integer" />
        <attr name="bottomDrawable" format="integer" />
        <attr name="isCyclic" format="boolean" />
        <attr name="drawTopDrawable" format="boolean" />
        <attr name="drawBottomDrawable" format="boolean" />
        <attr name="selectorDrawable" format="integer" />
        <attr name="drawSelector" format="boolean" />
    </declare-styleable>

    <!-- Attributes for com.madrobot.ui.widgets.SortableListView -->
    <declare-styleable name="SortableListView">
        <attr name="normalHeight" format="dimension" />
        <attr name="expandedHeight" format="dimension" />
        <attr name="grabberView" format="reference" />
        <attr name="draggingBackgroundDrawable" format="integer" />
        <attr name="removeMode">
            <enum name="none" value="-1" />
            <enum name="fling" value="0" />
            <enum name="slide" value="1" />
            <enum name="slideRight" value="1" />
            <enum name="slideLeft" value="2" />
        </attr>
    </declare-styleable>

    <!-- Attributes for com.madrobot.ui.widgets.CoverFlowGallery -->
    <declare-styleable name="CoverFlowGallery">
        <attr name="centerViewZoom" format="integer" />
        <attr name="rotationAngle" format="integer" />
    </declare-styleable>

    <!-- Attributes for com.madrobot.ui.widgets.JoystickView -->
    <declare-styleable name="JoystickView">
        <attr name="bgColor" format="color" />
        <attr name="bgAlpha" format="integer" />
        <attr name="handleColor" format="color" />
        <attr name="clickThreshold" format="float" />
        <attr name="moveResolution" format="float" />
        <attr name="autoReturnToCenter" format="boolean" />
        <attr name="coordinateSystem">
            <enum name="cartesian" value="0" />
            <enum name="differential" value="1" />
        </attr>
        <attr name="yAxisInverted" format="boolean" />
        <attr name="vibrate" format="boolean" />
        <attr name="vibrateDuration" format="integer" />
    </declare-styleable>

    <!-- Attributes for com.madrobot.ui.widgets.WeightedLinearLayout -->
    <declare-styleable name="WeightedLinearLayout">
        <attr name="majorWeightMin" format="float" />
        <attr name="minorWeightMin" format="float" />
        <attr name="majorWeightMax" format="float" />
        <attr name="minorWeightMax" format="float" />
    </declare-styleable>
    <declare-styleable name="PageCurlView">

        <!-- Enable/Disable debug mode -->
        <attr name="enableDebugMode" format="boolean" />
        <!-- Curl speed  the animation moves in px/frame -->
        <attr name="curlSpeed" format="integer" />
        <!-- FPS our animation will run -->
        <attr name="updateRate" format="integer" />
        <!-- Pixel offset the page will have from the curl edge -->
        <attr name="initialEdgeOffset" format="integer" />
        <!-- Top drawable for the curlview -->
        <attr name="top_Drawable" format="integer" />
        <!-- Bottom drawable for the curlview -->
        <attr name="bottom_Drawable" format="integer" />
        <!-- The curl mode to apply -->
        <attr name="curlMode">
            <enum name="Simple" value="0" />
            <enum name="Dynamic" value="1" />
        </attr>
    </declare-styleable>

    <!-- Attributes for com.madrobot.ui.widgets.SVGImageView -->
    <declare-styleable name="SVGImageView">
        <attr name="svgResource" format="integer" />
        <attr name="svgZoomFactor" format="integer" />
    </declare-styleable>

    <!-- Attributes for com.madrobot.ui.widgets.imageview.GIFImageView -->
    <declare-styleable name="GIFImageView">

        <!-- Identifier for the image that represents the GIFImageView's content. -->
        <attr name="gifImage" format="reference" />
        <!-- Autostart animation if the gif is animated -->
        <attr name="startAnimating" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ScrollingInfoListView">
        <attr name="scrollBarPanel" format="reference" />
        <attr name="scrollBarPanelInAnimation" format="reference" />
        <attr name="scrollBarPanelOutAnimation" format="reference" />
    </declare-styleable>

    <!-- Attributes for com.madrobot.ui.widgets.listview.FlipView -->
    <declare-styleable name="FlipView">

        <!-- Flip orientation -->
        <attr name="flipMode" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
        <!-- Bitmap format when animating. The  lighter formats increase performance but degrade look -->
        <attr name="animationBitmapFormat" format="enum">
            <enum name="ARGB_8888" value="0" />
            <enum name="ARGB_4444" value="1" />
            <enum name="RGB_565" value="2" />
        </attr>
        <!-- Acceleration by which the views are flipped -->
        <attr name="flipAcceleration" format="float" />
        <attr name="movementRate" format="float" />
        <attr name="maxTipAngle" format="integer" />
        <!-- Minimum pixels to initiate movement distance -->
        <attr name="minimumMovement" format="float" />
        <attr name="touchMovementAngle" format="integer" />
    </declare-styleable>
    
    <declare-styleable name="SignatureView">
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="float" />
    </declare-styleable>

</resources>