<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="headertext">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">21dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:minWidth">110dip</item>
    </style>

    <style name="primary_btn" parent="@style/buttonShadow">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_primary_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="todaysmenu_text" parent="@style/textShadow">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sploffers_text" parent="@style/todaysmenu_text">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="textShadow">
        <item name="android:shadowColor">#19736A</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.8</item>
    </style>

    <style name="buttonShadow">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
    </style>

    <!-- Sahdow for fields views like create account -->
    <style name="fieldShadow">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.8</item>
    </style>

    <style name="titleShadow">
        <item name="android:shadowColor">#C0C0C0</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
    </style>

    <!-- field related styles -->
    <style name="fieldText">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">60</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxLength">60</item>
    </style>

    <style name="fieldLabel">
        <item name="android:textColor">#303030</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">40</item>
    </style>

    <style name="fieldSeparator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:background">@drawable/field_separator</item>
    </style>

    <style name="fieldButton" parent="@style/primary_btn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!-- Acc details related styles -->
    <style name="accountdetailsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="accountdetailsImage">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:src">@drawable/arrow_green</item>
    </style>

    <style name="mainmenutext">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

</resources>